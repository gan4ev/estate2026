            </div>
        ) : (
            <div class="empty-state">
                <p>{t('search.no_results') || 'No properties found matching your criteria.'}</p>
                <a href={`/${lang}/properties`} style="color: #000; font-weight: 600; text-decoration: underline;">{t('search.clear_filters') || 'Clear all filters'}</a>
            </div>
        )}
    </main>
  </body>
</html>
