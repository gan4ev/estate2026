---
import { getDictionary, getAvailableLanguages } from '../../lib/i18n.js';

const db = Astro.locals.runtime?.env?.DB;
const { lang } = Astro.params;
const langs = await getAvailableLanguages(db);

const dict = await getDictionary(db, lang) || {};
const fallbackDict = await getDictionary(db, 'en') || {};
const t = (key) => dict[key] || fallbackDict[key] || key;

const user = Astro.locals.user;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t('title')}</title>
    <style>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, sans-serif;
        color: #333;
        background: #fafafa;
      }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: #fff;
        border-bottom: 1px solid #eaeaea;
      }
      a {
        text-decoration: none;
        color: inherit;
      }
      .logo {
        font-weight: bold;
        font-size: 1.25rem;
      }
      nav {
        display: flex;
        gap: 1.5rem;
        align-items: center;
      }
      nav a {
        color: #555;
      }
      nav a:hover {
        color: #000;
      }
      .lang-switcher {
        margin-left: 1.5rem;
      }
      .lang-switcher a {
        margin-left: 10px;
      }
      .lang-switcher a[data-active="true"] {
        font-weight: bold;
        color: #000;
      }
      main {
        text-align: center;
        padding: 6rem 2rem;
      }
      h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
      }
      .cta {
        display: inline-block;
        margin-top: 2rem;
        padding: 0.75rem 2rem;
        background: #000;
        color: #fff;
        border-radius: 4px;
        font-weight: 500;
      }
      .cta:hover {
        background: #333;
      }
    </style>
  </head>
  <body>
    <header>
      <a href={`/${lang}`} class="logo">{t('title')}</a>
      <nav>
        <a href={`/${lang}`}>{t('nav.home')}</a>
        <a href={`/${lang}/contact`}>{t('nav.contact')}</a>
        <span class="lang-switcher">
          {langs.map(l => (
            <a href={`/${l}`} data-active={l === lang ? 'true' : 'false'}>
              {l.toUpperCase()}
            </a>
          ))}
        </span>
        {user ? (
          <div style="display: flex; gap: 0.5rem; align-items: center; margin-left: 1rem;">
             <a href="/admin" style="padding: 0.25rem 0.5rem; background: #18181b; color: white; border-radius: 4px; font-size: 0.875rem;">Admin Panel</a>
             <form method="POST" action="/api/admin/logout" style="margin: 0;">
                <button type="submit" style="background: none; border: none; cursor: pointer; color: #dc2626; font-size: 0.875rem; padding: 0.25rem 0.5rem;">Logout</button>
             </form>
          </div>
        ) : (
          <a href="/admin/login" style="margin-left: 1rem; padding: 0.25rem 0.5rem; border: 1px solid #18181b; color: #18181b; border-radius: 4px; font-size: 0.875rem;">Sign In</a>
        )}
      </nav>
    </header>

    <main>
      <h1>{t('hero.headline')}</h1>
      <a href={`/${lang}/properties`} class="cta">{t('hero.cta')}</a>
    </main>
  </body>
</html>
